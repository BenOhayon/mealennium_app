<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".ui.activities.LoginEmailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loginEmailActivityBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon_black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"/>

        <com.benohayon.meallennium.ui.custom_views.AppTitleView
            android:id="@+id/loginEmailActivityMeallenniumLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginEmailActivityBackButton" />

        <LinearLayout
            android:id="@+id/loginEmailActivityTextFieldsFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_below="@+id/loginEmailActivityMeallenniumLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/loginEmailActivityEmailEditText"
                style="@style/editTextStyle"
                android:layout_width="@dimen/sign_in_button_width"
                android:layout_height="@dimen/edit_text_height"
                android:background="@color/white"
                android:hint="@string/sign_in_screen_email_edit_text_hint"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/app_edit_text_text_size" />

            <EditText
                android:id="@+id/loginEmailActivityPasswordEditText"
                style="@style/editTextStyle"
                android:layout_width="@dimen/sign_in_button_width"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="45dp"
                android:background="@color/white"
                android:hint="@string/sign_in_screen_password_edit_text_hint"
                android:inputType="textPassword"
                android:textSize="@dimen/app_edit_text_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/loginEmailActivitySignInButton"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/sign_in_screen_sign_up_button_text"
                android:fontFamily="@font/proximanova_bold"/>

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loginEmailActivityProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>