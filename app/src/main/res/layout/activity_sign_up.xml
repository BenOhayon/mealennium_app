<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".ui.activities.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/signUpActivityBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon_black"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>

        <com.benohayon.meallennium.ui.custom_views.AppTitleView
            android:id="@+id/signUpScreenMeallenniumLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpActivityBackButton"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_below="@+id/signUpScreenMeallenniumLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/signUpActivityNameEditText"
                style="@style/editTextStyle"
                android:layout_width="@dimen/sign_in_button_width"
                android:layout_height="@dimen/edit_text_height"
                android:background="@color/white"
                android:hint="@string/sign_up_screen_name_edit_text_hint"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/app_edit_text_text_size"/>

            <EditText
                android:id="@+id/signUpActivityEmailEditText"
                style="@style/editTextStyle"
                android:layout_width="@dimen/sign_in_button_width"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:hint="@string/sign_up_screen_email_edit_text_hint"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/app_edit_text_text_size" />

            <EditText
                android:id="@+id/signUpActivityPasswordEditText"
                style="@style/editTextStyle"
                android:layout_width="@dimen/sign_in_button_width"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:hint="@string/sign_up_screen_password_edit_text_hint"
                android:inputType="textPassword"
                android:textSize="@dimen/app_edit_text_text_size" />

            <EditText
                android:id="@+id/signUpActivityConfirmPasswordEditText"
                style="@style/editTextStyle"
                android:layout_width="@dimen/sign_in_button_width"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:hint="@string/sign_up_screen_confirm_password_edit_text_hint"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textSize="@dimen/app_edit_text_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/signUpActivitySignUpButton"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/sign_up_screen_sign_up_button_text"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/proximanova_bold"/>

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/signUpActivityProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>