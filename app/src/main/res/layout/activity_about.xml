<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGrey"
    tools:context=".ui.activities.AboutActivity">

    <com.benohayon.meallennium.ui.custom_views.LogoView
        android:id="@+id/aboutScreenLogoView"
        android:layout_width="@dimen/about_activity_logo_dimensions"
        android:layout_height="@dimen/about_activity_logo_dimensions"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="22dp"
        android:text="@string/about_screen_description_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_activity_version_text_size"
            android:text="@string/about_screen_version_title_text"/>

        <TextView
            android:id="@+id/aboutActivityVersionValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_activity_version_text_size"
            tools:text="1.0.0"/>

    </LinearLayout>

</LinearLayout>