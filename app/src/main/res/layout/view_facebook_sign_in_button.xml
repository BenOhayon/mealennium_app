<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/facebook_button_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mealennium_home_screen_sign_in_with_facebook_button_text"
        android:textSize="@dimen/app_button_text_size"
        android:layout_marginStart="@dimen/sign_in_button_space_between_text_and_image"
        android:fontFamily="@font/proximanova_regular"/>

</LinearLayout>